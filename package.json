{
  "name": "glue-controller",
  "version": "3.0.0",
  "description": "Simple controller (MVC pattern) for Node.js that works with Express or Koa",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build:main": "mkdir dist && cp -R -T src/ dist",
    "build": "run-s test clean build:main",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --forceExit --detectOpenHandles",
    "run-express-example": "nodemon --inspect=9229 examples/express.js",
    "run-koa-example": "nodemon --inspect=9229 examples/koa.js",
    "precommit": "lint-staged"
  },
  "keywords": [
    "mvc",
    "controller",
    "express",
    "koa"
  ],
  "author": "Daniel Meneses <pro.danielmeneses@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danielmeneses/glue-controller/issues",
    "email": "pro.danielmeneses@gmail.com"
  },
  "homepage": "https://github.com/danielmeneses/glue-controller",
  "dependencies": {
    "just-kebab-case": "^4.2.0",
    "loglevel": "^1.9.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.18.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "koa": "^2.15.0",
    "koa-router": "^12.0.1",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  },
  "lint-staged": {
    "{src,__tests__}/**/*.js": [
      "eslint",
      "npm run test --findRelatedTests"
    ]
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "text"
    ],
    "testEnvironment": "node",
    "testRegex": "(__tests__/.*\\.test.js)$"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
